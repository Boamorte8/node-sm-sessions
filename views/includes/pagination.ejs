<section class="pagination">
  <% if (currentPage !== 1 && previousPage !== 1) { %>
      <a class="page" href="?page=1">1</a>
  <% } %>
  <% if (hasPreviousPage) { %>
      <a class="page" href="?page=<%= previousPage %>"><%= previousPage %></a>
  <% } %>
  <a class="page active" href="?page=<%= currentPage %>"><%= currentPage %></a>
  <% if (hasNextPage) { %>
      <a class="page" href="?page=<%= nextPage %>"><%= nextPage %></a>
  <% } %>
  <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
      <a class="page" href="?page=<%= lastPage %>"><%= lastPage %></a>
  <% } %>
</section>